

-- Launch Application --
adb shell am start -c api.android.intent.LAUNCHER -a api.android.category.MAIN -n __package_name__/__activity_name__

adb shell am start -c api.android.intent.LAUNCHER -a api.android.category.MAIN -n northern.captain.curve.android/northern.captain.curve.android.AndroidLauncher




-- Close Application --
adb shell am force-stop __package_name__

adb shell am force-stop northern.captain.curve.android




-- Clear Cache --
adb shell pm clear __package_name__

adb shell pm clear northern.captain.curve.android
